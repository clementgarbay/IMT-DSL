  openBrowser "firefox"
  go "http://www.imt-atlantique.fr/fr/rechercher"
  fill input[type="text"] "2007"
  click button[text="Appliquer les filtres"]
  assign countResults() nbResults
  choose select[] [text="Le mois dernier"]
  click button[text="Appliquer les filtres"]
  assert nbResults = countResults()
}